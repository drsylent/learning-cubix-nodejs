<%- include('header') %>

    <div class="d-flex align-items-center" style="margin-top: 10%;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-sm-3 col-xs-1"></div>
                <div class="col-lg-4 col-sm-6 col-xs-10">
                    <div class="row justify-content-center" style="margin-bottom: 0.5em; font-weight: bold;">Regisztráció</div>
                    <form class="container" method="POST" action="/register">
                        <div class="row" style="margin-bottom: 0.5em">
                            <label class="col-lg-5 col-form-label text-lg-end" for="username">Felhasználónév</label>
                            <div class="col-lg-7"><input class="form-control" id="username"></div>
                        </div>
                        <div class="row" style="margin-bottom: 0.5em">
                            <label class="col-lg-5 col-form-label text-lg-end" for="email">Email cím</label>
                            <div class="col-lg-7"><input class="form-control" id="email" type="email"></div>
                        </div>
                        <div class="row" style="margin-bottom: 0.5em">
                            <label class="col-lg-5 col-form-label text-lg-end" for="password">Jelszó</label>
                            <div class="col-lg-7"><input class="form-control" id="password" type="password"></div>
                        </div>
                        <div class="row" style="margin-bottom: 0.5em">
                            <label class="col-lg-5 col-form-label text-lg-end" for="password-2">Jelszó megerősítése</label>
                            <div class="col-lg-7"><input class="form-control" id="password-2" type="password"></div>
                        </div>
                        <div class="row" style="margin-bottom: 0.5em">
                            <div class="col"></div>
                            <button class="row col btn btn-primary" type="submit">Regisztrálok</button>
                            <div class="col"></div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6 text-center"><a href="/login">Van fiókom, bejelentkezem</a></div>
                        <div class="col-3"></div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-3 col-xs-1"></div>
            </div>
        </div>
    </div>

<%- include('footer') %>
