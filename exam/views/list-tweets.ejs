<%- include('header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="container tjs-row">
                <div class="row">
                    <h4 class="col-6"><%= userName %> tweetjei</h4>
                    <div class="col-2"></div>
                    <form class="col-4 text-end" method="POST" action="/account/follow/<%= userName %>">
                        <button class="btn btn-primary" type="submit">Követem</button>
                    </form>
                </div>
            </div>
        <div class="col-lg-3"></div>
    </div>
    <% for (const [key, value] of Object.entries(tweets)) { %>
    <div class="row tjs-row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= userName %></h5>
                    <p class="card-text text-center"><%= value.content %></p>
                    <div class="container">
                        <div class="row">
                            <div class="col-6"><a class="card-link" href="/tweet?<%= key %>">Szerkesztés</a></div>
                            <div class="col-2"></div>
                            <form class="col-4 text-end" method="POST" action="/tweet/<%= key %>/delete">
                                <button class="btn btn-danger" type="submit">Törlés</button>
                            </form>        
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <% } %>
</div>

<%- include('footer') %>
