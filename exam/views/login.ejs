<%- include('header') %>

    <div class="d-flex align-items-center tjs-box-center">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-sm-3 col-xs-1"></div>
                <div class="col-lg-4 col-sm-6 col-xs-10">
                    <div class="row tjs-row-header justify-content-center">Bejelentkezés</div>
                    <form class="container" method="POST" action="/login">
                        <div class="row tjs-row">
                            <label class="col-lg-4 col-form-label text-lg-end" for="username">Felhasználónév</label>
                            <div class="col-lg-8"><input class="form-control" required name="username" id="username"></div>
                        </div>
                        <div class="row tjs-row">
                            <label class="col-lg-4 col-form-label text-lg-end" for="password">Jelszó</label>
                            <div class="col-lg-8"><input class="form-control" required name="password" id="password" type="password"></div>
                        </div>
                        <div class="row tjs-row">
                            <div class="col"></div>
                            <button class="row col btn btn-primary" type="submit">Bejelentkezés</button>
                            <div class="col"></div>
                        </div>
                    </form>
                    <div class="row tjs-row">
                        <div class="col-3"></div>
                        <div class="col-6 text-center"><a href="/password/forgot">Elfelejtettem a jelszavam</a></div>
                        <div class="col-3"></div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-3 col-xs-1"></div>
            </div>
        </div>
    </div>

<%- include('footer') %>
